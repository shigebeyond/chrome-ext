{
    "manifest_version": 2,
    "name": "jktool",
    "version": "1.0.0",
    "description": "Jktool Chrome extension",
    "icons":
    {
        "16": "logo.png",
        "48": "logo.png"
    },
    "options_page": "options.html",
    "background":
    {
        "scripts": ["js/lib/jquery-1.10.2.min.js", "js/lib/jquery.md5.js", "js/lib/youdao.js", "js/lib/local-mq.js",
            "js/lib/modal-bg.js", "js/lib/store.js", "js/options.js", "js/lib/socket.io.js", "js/lib/web-mq.js",
            "js/lib/tab.js", "js/bg/backup-tab.js", "js/bg/menu.js"]
    },
    "content_scripts": [
        {
          "matches": ["*://*/*"],
          "css": ["css/modal.css"],
          "js": ["js/lib/jquery-1.10.2.min.js", "js/lib/local-mq.js", "js/lib/modal.js", "js/fg/copy.js"]
        },
        {
          "matches": ["https://*.zhihu.com/*"],
          "js": ["js/fg/zhihu-copy.js"]
        }
    ],
    "permissions":
    [
        "contextMenus", 
        "tabs",
        "notifications", 
        "webRequest",
        "webRequestBlocking",
        "storage", 
        "cookies",
        "activeTab",
        "http://*/*",
        "https://*/*"
    ]
}
